pipeline {
  agent any

  options {
    timeout(time: 2, unit: 'MINUTES')
  }

  environment {
    ARTIFACT_ID = "elbuo8/webapp:${env.BUILD_NUMBER}"
    ARCHIVO = "build-node"
  }
   stages {
   stage('Building image') {
      steps{
          sh '''
          cd /var/jenkins_home/workspace
          pwd
            if [ -e "$ARCHIVO" ]; then
                echo "El archivo $archivo existe."
                # Realiza acciones adicionales aquí si el archivo existe
                cd /var/jenkins_home/workspace
                echo "construyo imagen"
                pwd
            else
                echo "El archivo $archivo no existe."
                echo "Hago docker pull para bajar la imagen"
                docker pull node
                if [ -e "node" ]; then
                    echo "Imagen descargada OK"
                    docker images node
                  else
                    echo "Imagen NO descargada"
                fi
                # Realiza acciones adicionales aquí si el archivo no existe
            fi
            # docker pull node
            # cd /var/jenkins_home/workspace
            # cd webapp
            # docker build -t testapp .
             '''  
        }
    }
  
  
    stage('Run tests') {
      steps {
       // sh "docker run testapp npm test"
        sh 'echo "Etapa de testeo" '
      }
    }
   stage('Deploy Image') {
      steps{
        sh '''
          echo "Deploy de la imagen a Docker hub"
        #docker tag testapp 127.0.0.1:5000/mguazzardo/testapp
        #docker push 127.0.0.1:5000/mguazzardo/testapp   
        '''
        }
      }
    }
}


    
  

